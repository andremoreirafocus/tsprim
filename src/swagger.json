  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Creates a category",
        "description": "Creates a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category name example",
                  "description": "category description example"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "Lists all categories",
        "description": "Lists all categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      }
                    }
                  },
                  "example": {
                    "name": "category name example",
                    "description": "category description example"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/specifications": {}
  }
}
